<h3>guitars</h3>

<div class="media">
  <div class="media-body">
    <p><%= @guitar.make %>
    <%= @guitar.model %>> 
    <%= @guitar.description %>> &nbsp;
    <%= @guitar.serial_range_start %>> &nbsp;
    <%= @guitar.serial_range_end %>> &nbsp;
    <%= @guitar.month %>> &nbsp;
    <%= @guitar.year %>> &nbsp;

  </p>
  </div>
</div>

<div class="btn-group">
  <%= link_to edit_guitar_path(@guitar), class: "btn btn-primary btn-sm" do %>
    <i class="glyphicon glyphicon-edit"></i>
    <span>Edit Guitar</span>
  <% end %>
  <%= link_to guitar_path(@guitar), class: "btn btn-danger btn-sm", method: :delete do %>
    <i class="glyphicon glyphicon-trash"></i>
    <span>Delete Guitar</span>
  <% end %>
</div>
